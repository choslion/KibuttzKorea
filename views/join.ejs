<div class="form-wrap">
  <h1>키부츠 코리아 회원가입</h1>
  <form action="/joinUs" method="post" onsubmit="return Validation();">
    <table>
      <tbody>
        <tr>
          <td><label for="name">이름</label></td>
          <td><input type="text" name="userName" id="name" placeholder="이름을 입력하세요" required /></td>
        </tr>
        <tr>
          <td><label for="name">아이디</label></td>
          <td><input type="text" name="userId" id="id" placeholder="아이디를 입력하세요" required /></td>
        </tr>
        <tr>
          <td><label for="name">비밀번호</label></td>
          <td><input type="password" name="userPw" id="pwd" placeholder="비밀번호를 입력하세요" required /></td>
        </tr>
        <tr>
          <td><label for="name">비밀번호확인</label></td>
          <td><input type="password" name="userPwC" id="pwd2" placeholder="비밀번호 확인" required /></td>
        </tr>
        <tr>
          <td><label for="name">생년월일</label></td>
          <td><input type="date" name="birth" required /></td>
        </tr>
        <tr>
          <td><label for="name">주소</label></td>
          <td><input type="text" name="address" placeholder="주소를 입력하세요" required /></td>
        </tr>
        <tr class="submit">
          <td colspan="2"><input type="submit" value="회원가입" required /></td>
        </tr>
      </tbody>
    </table>
  </form>
</div>
<script src="js/join.js"></script>
